<% obj.each do |article| %>
<div class="all-articles-in-cat">
    <div class="show-cat-container">
        <div class="all-cat-image">
            <%= image_tag(article.image) %>
        </div>
        <div class="all-cat-flex">
             <div id="all-articlecategory">
                <% if article.categories.any? %>
                    <%= render article.categories %>
                <% end %>
             </div>
                
             <div class="all-art-title">
                <%= link_to article.title , article_path(article) %>
             </div>
             <div class="all-art-content">
                <%= link_to article.content %>
             </div>
        </div>
    </div>
</div> 
<% end %>